<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_view_book_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="16dp"
            android:src="@drawable/placeholder"/>

        <TextView
            android:id="@+id/text_view_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_view_book_icon"
            android:text="Book Title"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text_view_author_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image_view_book_icon"
            android:layout_below="@id/text_view_book_title"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:text="Author: "
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text_view_publisher_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image_view_book_icon"
            android:layout_below="@id/text_view_author_name"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:text="Publisher: "
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text_view_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_book_title"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            android:text="Name"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_view_publisher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_author_name"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            android:layout_alignParentEnd="true"
            android:text="Name"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>